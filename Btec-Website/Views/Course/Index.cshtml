@model List<Btec_Website.Models.Course>

<h2>Course Management</h2>

<p>Manage courses and subject information.</p>

<a href="@Url.Action("Create", "Course")" class="btn btn-primary">Create New Course</a>

<table class="table">
    <thead>
        <tr>
            <th>Course Name</th>    
            <!-- Add other course properties as needed -->
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <!-- Display other course properties as needed -->
                <td>
                    <a href="@Url.Action("Delete", "Course", new { id = course.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>